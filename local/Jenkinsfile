{ ->
    pipeline {
        agent any

        stages {
            stage('Build') {
                steps {
                    echo 'Building..'
                    sh 'sbt compile'
                }
            }
            stage('Test') {
                steps {
                    echo 'Testing..'
                    sh 'sbt test'
                }
            }
            stage('Deploy Locally') {
                steps {
                    echo 'Deploying....'
                    sh 'sbt docker:publishLocal'
                }
            }
        }
    }
}
